<?xml version="1.0" encoding="utf-8"?>
<!--
    This file contains the top that is used in multiple activities,
    such as MapsActivity and ContentActivity.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="5dp"
    android:gravity="center_horizontal"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="0dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/button_back" />

        <!-- Nobody is really sure what this button does, so removed for the time being
        <ImageButton
            android:id="@+id/button_options"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/button_options"
            android:visibility="invisible" />
        -->
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="5dp"
            android:gravity="center"

            android:src="@drawable/clock" />

        <eu.trails2education.trails.views.MyTextViewBold
            android:id="@+id/timeText"
            style="@style/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0:00:00" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <eu.trails2education.trails.views.MyTextViewBold
            style="@style/pathText"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <eu.trails2education.trails.views.MyTextView
            style="@style/countryText"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>

</LinearLayout>
